{
    "variables": {
      "do_token": "{{env `DIGITALOCEAN_TOKEN`}}"
    },
    "builders": [
      {
        "type": "digitalocean",
        "api_token": "{{user `do_token`}}",
        "region": "nyc3",
        "size": "s-1vcpu-1gb",
        "image": "ubuntu-22-04-x64",
        "ssh_username": "root",
        "snapshot_name": "digitalocean-ami-{{timestamp}}"
      }
    ],
    "provisioners": [
      {
        "type": "ansible",
        "playbook_file": "ansible/playbook.yml"
      }
    ]
  }